{{> header}}
<div class="container">
    <form action="/projects/add" method="POST">
        <div class="form-group">
            <label>项目名称：</label>
            <input class="form-control" name="name" type="text">
        </div>
        <div class="form-group">
            <label>负责人：</label>
            <input class="form-control" name="pic" type="text">
        </div>
        <div class="form-group">
            <label>联系方式：</label>
            <input class="form-control" name="contact" type="tel">
        </div>
        <div class="form-group">
            <label>启动时间：</label>
            <input class="form-control" name="start_at" type="date">
        </div>
        <div class="form-group">
            <label>预计完成时间：</label>
            <input class="form-control" name="complete_at" type="date">
        </div>
        <div class="form-group">
            <label>资金预算：</label>
            <input class="form-control" name="funds" type="number">
        </div>
        <div class="form-group">
            <label>人力资源：</label>
            <textarea class="form-control" name="manpower"></textarea>
        </div>
        <div class="form-group">
            <label>备注：</label>
            <textarea class="form-control" name="remark"></textarea>
        </div>
        <p>{{error_tip}}</p>
        <input class="btn btn-primary" type="submit" value="确认添加">
        <a href="/index">返回列表</a>
    </form>
</div>